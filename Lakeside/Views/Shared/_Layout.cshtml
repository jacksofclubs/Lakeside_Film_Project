<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lakeside Film Society</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lakeside Film Society", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Home/Index">Home</a></li>
                            <li><a href="~/Film/Filmlist">Films</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="~/Member/MyReview">My Reviews</a></li>
                            <li><a href="~/Member/MyProfile">My Profile</a></li>
                            @*<li><a href="~/Shopping/Index/fx">Special Effects</a></li>*@
                            @*<li role="separator" class="divider"></li>*@
                            @*<li><a href="~/Customer/Update">My Info</a></li>*@
                            @*<li><a href="~/Shopping/Cart">My Cart</a></li>*@
                            <li role="separator" class="divider"></li>
                            <li><a href="~/Admin/FilmList">Film Maintenance</a></li>
                            <li><a href="~/Admin/MemberList">Member Maintenance</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>