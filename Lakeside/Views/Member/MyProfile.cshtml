                                    @Html.LabelFor(m => m.Avatar)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.Avatar,
                                     new { style = "width:200px", @readonly = "true" })<br />
                                    <input type="file" name="UploadFile" value="" />
                                </div>

                                @*<div class="editor-label">
                                    @Html.LabelFor(m => m.Admin)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.Admin, new { style = "width:40px", @maxlength = "1" })
                                    <br />
