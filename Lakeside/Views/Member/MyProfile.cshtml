@model Lakeside.Models.Member

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style>
.field-validation-valid, .validation-summary-valid {
    display: none;
}

.field-validation-error {
    color: #f00;
}

.validation-summary-errors {
    color: #f00;
    font-weight: bold;
}

.input-validation-error {
    border: 2px solid #f00;
    background-color: #fee;
}

input[type="checkbox"].input-validation-error {
    outline: 2px solid #f00;
}
</style>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="MemberID" value="@Model.MemberID" />
    <input type="hidden" name="Admin" value="@Model.Admin" />

    <div class="row">
        <div class="col-md-2 ">
            <img src="~/content/images/members/@Model.Avatar" class="myprofile-image-avatar" />
        </div>

        <div class="col-md-10">
            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            <br />
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { style = "width:400px", @maxlength = "50" })
                <br />
                @Html.ValidationMessageFor(m => m.Email)
                <br />
            </div>
            @*<div class="editor-label">*@
                @Html.LabelFor(m => m.PWD)
            <br />
            @*</div>*@
            @*<div class="editor-field">*@
                @Html.TextBoxFor(m => m.PWD, new { style = "width:160px", @maxlength = "20" })
                <br />
                @Html.ValidationMessageFor(m => m.PWD)
            <br />
            @*</div>*@
            @*<div class="editor-label">*@
                @Html.LabelFor(m => m.MemberName)
            <br />
            @*</div>*@
            @*<div class="editor-field">*@
                @Html.TextBoxFor(m => m.MemberName, new { style = "width:240px", @maxlength = "30" })
            <br />
                @Html.ValidationMessageFor(m => m.MemberName)
            <br />
            @*</div>*@
            @*<div class="editor-label">*@
                @Html.LabelFor(m => m.Avatar)
            <br />
            @*</div>*@
            @*<div class="editor-field">*@
                @Html.TextBoxFor(m => m.Avatar, new { style = "width:200px", @readonly = "true" })
                <input type="file" name="UploadFile" value="" />
            <br /><br />
            @*</div>*@
            <input type="submit" value="Save Changes" />
        </div>
    </div>

}@*end of beginform block*@